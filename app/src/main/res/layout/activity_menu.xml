<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C11212"
    tools:context=".Menu">


    <TextView
        android:id="@+id/bemVindotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chamou, Chegou ! "
        android:textColor="#F8F6F6"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="268dp"
        android:layout_height="106dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004"
        app:srcCompat="@drawable/logo_size_invert"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <Button
        android:id="@+id/BotaoCalcular"
        android:layout_width="80dp"
        android:layout_height="93dp"
        app:backgroundTint="#CC0505"
        app:icon="@drawable/calculadora"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.718" />

    <Button
        android:id="@+id/BotaoCadastrar"
        android:layout_width="210dp"
        android:layout_height="81dp"
        android:layout_marginBottom="284dp"
        android:text="Cadastro"
        app:backgroundTint="#CC0505"
        app:icon="@drawable/cadastro"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bemVindotxt"
        app:layout_constraintVertical_bias="0.707" />

    <Button
        android:id="@+id/BotaoLista"
        android:layout_width="80dp"
        android:layout_height="93dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="76dp"
        app:backgroundTint="#CC0505"
        app:icon="@drawable/iconelista"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toEndOf="@+id/BotaoCalcular"
        app:layout_constraintTop_toBottomOf="@+id/BotaoCadastrar"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>